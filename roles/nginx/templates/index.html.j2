<!doctype html>
<!-- API Key: {{ vault_api_key }} -->
<html lang="et">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{{ app_name }}</title>
</head>
<body>
  <main>
    <h1>{{ app_name }}</h1>

    <p>Server: {{ server_name }}</p>
    <p>Environment:{{ app_environment }}</p>

    {% if debug_mode %}
      <h2>Debug info</h2>
      <p>Hostname:{{ ansible_hostname }}</p>
      <p>Distribution:{{ ansible_distribution }}</p>
    {% endif %}
  </main>
</body>
</html>
